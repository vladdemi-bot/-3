8. задача про роки
const age1 = parseInt(prompt("Введіть вік користувача 1:"));
const age2 = parseInt(prompt("Введіть вік користувача 2:"));
const age3 = parseInt(prompt("Введіть вік користувача 3:"));

if (age1 >= 18) {
    console.log("Користувач 1 повнолітній");
} else {
    console.log("Користувач 1 неповнолітній");
}
if (age2 >= 18) {
    console.log("Користувач 2 повнолітній");
} else {
    console.log("Користувач 2 неповнолітній");
}
if (age3 >= 18) {
    console.log("Користувач 3 повнолітній");
} else {
    console.log("Користувач 3 неповнолітній");
}
